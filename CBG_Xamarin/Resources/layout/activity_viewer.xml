<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/menuButtons" >
        <ImageButton
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton" />
        <TextView
            android:text="If you go back to the generator screen you will lose this map forever, but the settings used to generate it will be restored.\nDo you want to continue?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/backButton"
            android:visibility="gone"
            android:elevation="1dp"
            android:background="@color/material_grey_100"
            android:id="@+id/ContinuePrompt" />
        <Button
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContinuePrompt"
            android:visibility="gone"
            android:clickable="false"
            android:elevation="1dp"
            android:id="@+id/Yes" />
        <Button
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContinuePrompt"
            android:visibility="gone"
            android:clickable="false"
            android:layout_toRightOf="@id/Yes"
            android:elevation="1dp"
            android:id="@+id/No" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/board"
            android:minWidth="25px"
            android:minHeight="25px"
            android:elevation="0dp">
        </RelativeLayout>
</RelativeLayout>