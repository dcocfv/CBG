<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/menuButtons" >
    <ImageButton
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton" />
        <TextView
            android:text="If you go back to the config load screen you will lose these generator settings.\nDo you want to continue?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/backButton"
            android:visibility="gone"
            android:elevation="1dp"
            android:background="@color/material_grey_300"
            android:id="@+id/ContinuePrompt" />
        <Button
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContinuePrompt"
            android:visibility="gone"
            android:clickable="false"
            android:elevation="1dp"
            android:id="@+id/Yes" />
        <Button
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContinuePrompt"
            android:visibility="gone"
            android:clickable="false"
            android:layout_toRightOf="@id/Yes"
            android:elevation="1dp"
            android:id="@+id/No" />




        <Button
            android:text="Production Distribution"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Yes"
            android:id="@+id/ResourceOptions"/>

        <TextView
            android:text="Brick"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ResourceOptions"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/Brick" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Brick"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:visibility="gone"
            android:id="@+id/BrickBar" />

        <TextView
            android:text="Ore"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Brick"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/Ore" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Ore"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:visibility="gone"
            android:id="@+id/OreBar" />

        <TextView
            android:text="Sheep"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Ore"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/Sheep" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Sheep"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:visibility="gone"
            android:id="@+id/SheepBar" />

        <TextView
            android:text="Wheat"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Sheep"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/Wheat" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Wheat"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:visibility="gone"
            android:id="@+id/WheatBar" />

        <TextView
            android:text="Wood"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Wheat"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/Wood" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Wood"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:visibility="gone"
            android:id="@+id/WoodBar" />
        
        <TextView
            android:text="Variance"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/OtherOptions"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/Variance" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Variance"
            android:layout_toRightOf="@id/Variance"
            android:max="4"
            android:min="0"
            android:progress="2"
            android:visibility="gone"
            android:id="@+id/VarianceBar" />

        <Button
            android:text="Intersection Options"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Wood"
            android:id="@+id/OtherOptions"/>

        <Button
            android:text="Generate New Board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/GenerateBoard" />
    

</RelativeLayout>
