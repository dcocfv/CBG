<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/menuButtons" >
    <TextView
        android:text="Chose Game Type:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/ChoseGameTypeText" />
    <TextView
        android:text="Number of Players:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ChoseGameTypeText"
        android:textStyle="bold"
        android:id="@+id/NumberPlayersText" />
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NumberPlayersText"
        android:layout_alignParentLeft="true"
        android:id="@+id/NumberPlayers">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/ThreePlayers" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/FourPlayers" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/FivePlayers" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/SixPlayers" />
    </RadioGroup>
        <TextView
            android:text="Game Type:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_below="@id/NumberPlayers"
            android:textStyle="bold"
            android:id="@+id/GameTypeText" />
        <RadioGroup
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/GameTypeText"
            android:layout_alignParentLeft="true"
            android:id="@+id/GameType">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Base Game"
                android:id="@+id/BaseGameButton" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seafarers"
                android:id="@+id/SeafarersButton" />
        </RadioGroup>


        <TextView
            android:text="Scenario:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/GameType"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/ScenarioText" />
        <RadioGroup
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ScenarioText"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:clickable="false"
            android:id="@+id/Scenario">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="1: Heading to New Shores"
                android:id="@+id/one" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="2: The Four Islands"
                android:id="@+id/two" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="3: The Fog Islands"
                android:id="@+id/three" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="4: Through the Desert"
                android:id="@+id/four" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="5: The Forgotten Tribe"
                android:id="@+id/five" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="6: Cloth for Catan"
                android:id="@+id/six" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="7: The Pirate Islands"
                android:id="@+id/seven" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="8: The Wonders of Catan"
                android:id="@+id/eight" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="9: New World"
                android:id="@+id/nine" />
        </RadioGroup>

        <Button
            android:text="Confirm Game Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:id="@+id/LoadConfig" />

        <ImageButton
            android:background="?android:attr/colorBackground"
            android:minHeight="100px"
            android:minWidth="100px"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="0px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/resetButton" />
</RelativeLayout>
