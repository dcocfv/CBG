<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clickable="false"
    android:id="@+id/menuButtons" >
    <TextView
        android:text="Customize Generation:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/Customize" />
    <ImageButton
            android:minHeight="100px"
            android:minWidth="100px"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="0px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton" />
        <TextView
            android:text="If you go back to the config load screen you will lose these generator settings.\nDo you want to continue?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/backButton"
            android:visibility="gone"
            android:elevation="1dp"
            android:background="@color/material_grey_300"
            android:id="@+id/ContinuePrompt" />
        <Button
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContinuePrompt"
            android:visibility="gone"
            android:clickable="false"
            android:elevation="1dp"
            android:id="@+id/Yes" />
        <Button
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ContinuePrompt"
            android:visibility="gone"
            android:clickable="false"
            android:layout_toRightOf="@id/Yes"
            android:elevation="1dp"
            android:id="@+id/No" />

        <ImageButton
            android:background="?android:attr/colorBackground"
            android:minHeight="100px"
            android:minWidth="100px"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="0px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/resetButton" />




        <Button
            android:text="Resource Options"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Yes"
            android:id="@+id/ResourceOptions"/>

        <TextView
            android:text="Brick"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ResourceOptions"
            android:textStyle="bold"
            android:id="@+id/Brick" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Brick"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:id="@+id/BrickBar" />

        <TextView
            android:text="Ore"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Brick"
            android:textStyle="bold"
            android:id="@+id/Ore" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Ore"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:id="@+id/OreBar" />

        <TextView
            android:text="Sheep"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Ore"
            android:textStyle="bold"
            android:id="@+id/Sheep" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Sheep"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:id="@+id/SheepBar" />

        <TextView
            android:text="Wheat"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Sheep"
            android:textStyle="bold"
            android:id="@+id/Wheat" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Wheat"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:id="@+id/WheatBar" />

        <TextView
            android:text="Wood"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Wheat"
            android:textStyle="bold"
            android:id="@+id/Wood" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Wood"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:id="@+id/WoodBar" />


        <TextView
            android:text="Gold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Wood"
            android:textStyle="bold"
            android:id="@+id/Gold" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Gold"
            android:layout_toRightOf="@id/Wheat"
            android:max="100"
            android:min="0"
            android:progress="50"
            android:id="@+id/GoldBar" />
        
        <TextView
            android:text="Vertex Variance"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/OtherOptions"
            android:textStyle="bold"
            android:id="@+id/Variance" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Variance"
            android:layout_toRightOf="@id/Variance"
            android:max="4"
            android:min="0"
            android:progress="2"
            android:id="@+id/VarianceBar" />

        <TextView
            android:text="Num Threads: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdvancedOptions"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/NumThreads" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/NumThreads"
            android:layout_toRightOf="@id/NumThreads"
            android:max="9"
            android:min="0"
            android:progress="0"
            android:visibility="gone"
            android:id="@+id/NumThreadsBar" />

        <Button
            android:text="Intersection Options"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Gold"
            android:id="@+id/OtherOptions"/>

        <Button
            android:text="Advanced Options"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Variance"
            android:id="@+id/AdvancedOptions"/>

        <Button
            android:text="Generate Board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/GenerateBoard" />


        <ImageButton
            android:minHeight="100px"
            android:minWidth="100px"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="0px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorBackground"
            android:layout_toRightOf="@id/ResourceOptions"
            android:layout_alignBottom="@id/ResourceOptions"
            android:layout_alignTop="@id/ResourceOptions"
            android:id="@+id/ProductionHelp" />
        <TextView
            android:text="Resource Options:\nThese sliders determine the ratios for how much production each resource will have compared to the other resources."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:elevation="2dp"
            android:clickable="false"
            android:background="@color/material_grey_600"
            android:id="@+id/ProductionHint" />


        <ImageButton
            android:minHeight="100px"
            android:minWidth="100px"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="0px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorBackground"
            android:layout_toRightOf="@id/OtherOptions"
            android:layout_alignBottom="@id/OtherOptions"
            android:layout_alignTop="@id/OtherOptions"
            android:id="@+id/IntersectionHelp" />
        <TextView
            android:text="Intersection Options:\n\nA lower variance means that the production of all the vertices will be more similar. A higher variance means you are more likely to see some really good vertices and some really bad vertices.\n\nThis option greatly effects generation time (lower variance = longer time)."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:elevation="2dp"
            android:clickable="false"
            android:background="@color/material_grey_600"
            android:id="@+id/IntersectionHint" />

        <ImageButton
            android:minHeight="100px"
            android:minWidth="100px"
            android:maxHeight="100px"
            android:maxWidth="100px"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="0px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorBackground"
            android:layout_toRightOf="@id/AdvancedOptions"
            android:layout_alignBottom="@id/AdvancedOptions"
            android:layout_alignTop="@id/AdvancedOptions"
            android:id="@+id/AdvancedHelp" />
        <TextView
            android:text="Advanced Options:\nThis slider changes how many threads will be created and used to generate your board. Default should be fine in most cases."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:elevation="2dp"
            android:clickable="false"
            android:background="@color/material_grey_600"
            android:id="@+id/AdvancedHint" />

</RelativeLayout>
